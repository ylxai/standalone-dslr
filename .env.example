# ðŸ”§ Standalone DSLR Environment Configuration
# Copy this to .env and fill with your actual credentials

# ===== MAIN PROJECT COMPATIBILITY =====
# Copy these from main project .env.local

# Supabase Configuration (REQUIRED)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Web Project URL (REQUIRED)
NEXT_PUBLIC_APP_URL=https://hafiportrait.photography
# For local testing: http://localhost:3002

# ===== STORAGE CONFIGURATION =====

# Cloudflare R2 (for compressed photos)
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=your_r2_bucket_name
R2_ENDPOINT=your_r2_endpoint

# Google Drive (for original backup)
GOOGLE_DRIVE_CLIENT_ID=your_google_drive_client_id
GOOGLE_DRIVE_CLIENT_SECRET=your_google_drive_client_secret
GOOGLE_DRIVE_REFRESH_TOKEN=your_google_drive_refresh_token
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id

# ===== DSLR SYSTEM CONFIGURATION =====

# Camera Settings
DSLR_CAMERA_MODEL=Nikon D7100
DSLR_WATCH_DIRECTORY=/path/to/camera/folder
DSLR_TEMP_DIRECTORY=./temp/

# Processing Settings
DSLR_DEFAULT_PRESET=wedding_warm
DSLR_AUTO_WATERMARK=true
DSLR_BACKUP_ORIGINALS=true
DSLR_JPEG_QUALITY=95

# Upload Settings
DSLR_DEFAULT_ALBUM=Official
DSLR_UPLOADER_NAME=DSLR Auto
DSLR_MAX_RETRIES=3
DSLR_RETRY_DELAY=5

# ===== MONITORING & LOGGING =====

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/dslr_system.log

# Status Files
STATUS_FILE=./dslr_status.json
CONFIG_FILE=./dslr_active_config.json
COMMANDS_FILE=./dslr_commands.json

# ===== DEVELOPMENT SETTINGS =====

# For testing without hardware
DSLR_SIMULATION_MODE=false
DSLR_TEST_EVENT_ID=your_test_event_id

# Debug settings
DEBUG_API_CALLS=false
DEBUG_FILE_PROCESSING=false
DEBUG_UPLOAD_PROCESS=false